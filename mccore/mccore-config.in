prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage="\
Usage: mccore-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--libs-static] [--cflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

wrnaml=@HAVE_LIBRNAML@

libraries=-lmccore
std_libraries=-lz

if test $wrnaml -eq 1; then
  libraries=$libraries" "-lrnamlc++
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      if test @includedir@ != /usr/include ; then
        includes=-I@includedir@
      fi
      echo $includes
      ;;
    --libs)
      libdirs=-L@libdir@
      echo $libdirs $libraries $std_libraries
      ;;
    --libs-static)
      libdirs=-L@libdir@
      echo $libdirs -Wl,-Bstatic $libraries -Wl,-Bdynamic $std_libraries
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

exit 0
