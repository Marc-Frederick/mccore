prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

#usage="\
#Usage: mccore-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--libs-static] [--cflags]"

usage="\
Usage: mccore-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs[=CLASS]] [--cflags]\n\n\
CLASS: mccore, ext, std, or all (default)."


if test $# -eq 0; then
      echo -e ${usage} 1>&2
      exit 1
fi

wrnaml=@HAVE_LIBRNAML@

libdirs=""
libs=""
mccore_libs=-lmccore
std_libs=-lz
ext_libs=""

if !(test -z $wrnaml); then
  ext_libs=$ext_libs" "-lrnamlc++
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      if test @includedir@ != /usr/include ; then
        includes=-I@includedir@
      fi
      echo $includes
      ;;
    --libs=*)
      case $optarg in
	  all)
              libdirs=-L@libdir@
	      libs=$libs" "$mccore_libs" "$ext_libs" "$std_libs
	      ;;
	  mccore)
	      libdirs=-L@libdir@
	      libs=$libs" "$mccore_libs
	      ;;
	  ext)
	      libs=$libs" "$ext_libs
	      ;;
	  std)
	      libs=$libs" "$std_libs
	      ;;
      esac
      ;;
    --libs)
      if test -z "$libs"; then
          libdirs=-L@libdir@
	  libs=$libs" "$mccore_libs" "$ext_libs" "$std_libs
      fi
      echo $libdirs $libs
      ;;
    *)
      echo -e ${usage} 1>&2
      exit 1
      ;;
  esac
  shift
done

exit 0
